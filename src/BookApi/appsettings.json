{
  "BookstoreDatabaseSettings": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "BookStore"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "OutputTemplate": "{Timestamp:O} {MachineName} {Service} {UserName} [{Level}] {Message}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["WithMachineName"],
    "Properties": {
      "Service": "BookService"
    }
  },
  "AllowedHosts": "*"
}
